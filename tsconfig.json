{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react",
        "lib": ["es2015", "es2017", "dom"]
    },
    "exclude": [
      "node_modules",
      "src/main"
    ]
}